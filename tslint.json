{
    "defaultSeverity": "error",
    "extends": [
        "tslint-react"
    ],
    "jsRules": {
        "max-line-length": {
            "options": [125]
        }
    },
    "rules": {
        "member-access": true,
        "indent": [true, "spaces", 2],
        "trailing-comma": [true, {
            "multiline": {
                "objects": "always",
                "arrays": "always",
                "functions": "ignore",
                "typeLiterals": "always",
                "imports": "always",
                "exports": "always"
            },
            "singleline": "never"
        }],
        "no-multi-spaces": true,
        "object-curly-spacing": [true, "always"],
        "space-in-parens": [true, "never"],
        "array-bracket-spacing": [true, "never"],
        "no-trailing-whitespace": true,
        "ordered-imports": true,
        "no-empty-interface": true,
        "one-variable-per-declaration": true,
        "no-arg": true,
        "no-console": {
            "severity": "warning",
            "options": ["log", "trace", "debug", "info"]
        },
        "no-consecutive-blank-lines": true,
        "semicolon": false,
        "no-var-keyword": true,
        "no-unused-variable": [true]
    },
    "rulesDirectory": [],
    "linterOptions": {
        "exclude": [
            "node_modules/**",
            ".next/**",
            ".idea/**",
            "**/*.d.ts"
        ]
    }
}
